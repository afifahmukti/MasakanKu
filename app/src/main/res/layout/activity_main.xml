<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/logomain"
    tools:context="com.example.customer.myapplication.MainActivity"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/viewpager">


        </android.support.v4.view.ViewPager>
        <!--ImageView
            android:id="@+id/imageView2"
            android:layout_width="111dp"
            android:layout_height="66dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/halal"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="111dp"
            android:layout_height="66dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/koki"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="111dp"
            android:layout_height="66dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/sendokgarpu"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="111dp"
            android:layout_height="66dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo7"
            android:layout_weight="1"/-->




    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradient"
        android:textAlignment="center"
        android:textSize="25dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="366dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgsayur"
            android:layout_width="111dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/imageView4"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_toRightOf="@+id/imageView4"
            android:onClick="sayur"
            app:srcCompat="@drawable/sop" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtseafood"
            android:layout_alignBottom="@+id/txtseafood"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_toRightOf="@+id/imageView4"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="SAYUR"
            android:textSize="20dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="153dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="18dp"
            android:onClick="seafood"
            app:srcCompat="@drawable/seafood" />

        <TextView
            android:id="@+id/txtseafood"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignStart="@+id/imageView4"
            android:layout_below="@+id/imageView4"
            android:layout_marginTop="14dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="SEAFOOD"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="114dp"
            android:layout_height="80dp"

            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp"
            android:onClick="ayam"
            app:srcCompat="@drawable/ayam" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="AYAM"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnlogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="logout"
        android:text="Logout" />


</LinearLayout>
