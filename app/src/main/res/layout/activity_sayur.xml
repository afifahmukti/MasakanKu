<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.customer.myapplication.Sayur">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sayurasem"
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            android:onClick="sayurasem"
            android:src="@drawable/sayurasem" />

        <TextView
            android:id="@+id/textViewsayurasem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="center"
            android:text="Sayur Asem"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/sayurlodeh"
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:layout_column="0"
            android:layout_row="2"
            android:src="@drawable/sayurlodeh"
            android:onClick="sayurlodeh"/>
        <TextView
            android:id="@+id/textViewsayulodeh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:gravity="center"
            android:text="Sayur Lodeh"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/terongbalado"
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:layout_column="0"
            android:layout_row="4"
            android:src="@drawable/terongbalado"
            android:onClick="terongbalado"/>
        <TextView
            android:id="@+id/textViewterongbalado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:gravity="center"
            android:text="terongbalado"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:textStyle="bold" />



    </GridLayout>

</ScrollView>
